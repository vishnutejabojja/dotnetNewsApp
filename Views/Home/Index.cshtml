@model List<AirplaneNewsScraper.Services.NewsArticle>

@{
    ViewData["Title"] = "Aircraft News";
}

<h1>Aircraft News</h1>

<div class="row">
    @foreach (var article in Model)
    {
        <div class="">
            <div class="card mb-4">
                <div class="card-body d-flex">
                    <div class="items-start" style="width: fit-content;">
                         @if (!string.IsNullOrEmpty(article.Img))
                                {
                                    <img src="@article.Img" class="" style="align-items: start; width: 180px;" alt="@article.Img" />
                                }
                    </div>
                    <div class="bd-highlight" style="padding: 20px;">
                    <h5 class="card-title">@article.Title</h5>
                    <h6 class="card-title" style="color: #c31040">@article.SubHeading</h6>
                    <p class="card-text" style="color: white;">@article.Summary</p>
                    <a href="@article.Link" class="text-decoration-none p-2 text-black" style="a:hover,a:focus {font-size: 120%}">Read More ></a>
                    </div>
                </div>
            </div>
        </div>
    }
